
<br />
<h2><b>List of Courses</b></h2>
<hr width="100%" align="left">

<%= link_to 'Create a New Course', new_course_path %>
<table class="reference">
  <tr>
	<th>No</th>
    <th>Code</th>
    <th>Name</th>
    <th>No Teacher</th>
    <th>Teacher</th>
    <th></th>
    <th></th>
	<th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
	<td><%= course.id %></td>  
    <td><%= course.code %></td>
    <td><%= course.name %></td>
	<td><%=link_to(course.teacher_id, { :controller => "teachers", :action => "show", :id => course.teacher_id })%></td>
	<td><%=link_to(course.teacher.full_name, { :controller => "teachers", :action => "show", :id => course.teacher_id })%></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

